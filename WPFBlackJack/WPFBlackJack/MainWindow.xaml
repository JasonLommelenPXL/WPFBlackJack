<Window x:Class="WPFBlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBlackJack"
        mc:Ignorable="d"
        Title="♥ ♦ ♠ ♣ Blackjack ♥ ♦ ♠ ♣"
        Height="800"
        Width="1200"
        ResizeMode="NoResize"
        FontSize="18"
        TextElement.Foreground="White">

    <Window.Resources>
        <Style TargetType="{x:Type Control}">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="C:\Users\jason\downloads\blackjack-background.png"
                    Stretch="Fill"/>
    </Window.Background>

    <Grid Margin="10">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="Transparent" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="0"
                  Grid.RowSpan="3"
                  Grid.Column="0"
                  Header="Game"
                  Margin="10">
            <StackPanel>
                <Button x:Name="btnNewGame"
                        Content="New Game"
                        Margin="0,10,0,10"
                        Padding="10,5"
                        Background="#FF008A00"
                        BorderBrush="#FF00B900"
                        BorderThickness="2"
                        Click="StartNewGame"/>

                <Separator Margin="0,0,0,10"/>

                <TextBlock Text="Credits:" Margin="0,0,0,5"/>
                <TextBlock x:Name="creditsTextBlock"
                           Text="500"
                           FontSize="36"
                           FontWeight="Bold"
                           TextAlignment="Right"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Header="Bank"
                  Margin="10"
                  Height="220">
            <StackPanel Orientation="Horizontal"
                        x:Name="bankStack"
                        Margin="5"
                        Height="170"
                        ClipToBounds="True"/>
        </GroupBox>

        <GroupBox Grid.Row="2"
                  Grid.Column="1"
                  Header="Player"
                  Margin="10"
                  Height="220">
            <StackPanel Orientation="Horizontal"
                        x:Name="playerStack"
                        Margin="5"
                        Height="170"
                        ClipToBounds="True"/>
        </GroupBox>

        <Grid Grid.Row="1"
              Grid.Column="1"
              Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="playerBetPanel"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Margin="10">
                <TextBlock Text="Place your bet:" Margin="0,0,0,10"/>

                <TextBox x:Name="betTextBox"
                         Width="180"
                         Height="30"
                         Margin="0,0,0,10"/>

                <Button x:Name="playButton"
                        Content="Play"
                        Width="180"
                        Padding="10,5"
                        Background="#FF008A00"
                        BorderBrush="#FF00B900"
                        BorderThickness="2"
                        Click="playGame"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="10">
                <Grid>
                    <Image x:Name="deckImage"
                           Source="/images/cards/back.png"
                           Width="120"
                           Height="170"
                           Stretch="Uniform"/>

                    <TextBlock x:Name="remainingCardsTextBlock"
                               Text="52"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <StackPanel x:Name="actionsGrid"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            Visibility="Collapsed">
                    <Button x:Name="cardButton"
                            Content="Card"
                            Width="120"
                            Padding="10,5"
                            Background="#FF008A00"
                            BorderBrush="#FF00B900"
                            BorderThickness="2"
                            Click="SelectedCardButton"/>

                    <Border Width="10"/>

                    <Button x:Name="stopButton"
                            Content="Stop"
                            Width="120"
                            Padding="10,5"
                            Background="#FF8A0000"
                            BorderBrush="#FFB90000"
                            BorderThickness="2"
                            Click="SelectedStopButton"/>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="bankPointsTextBlock"
                           Grid.Row="0"
                           Text="0"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Margin="0,0,10,0"/>

                <TextBlock x:Name="playerPointsTextBlock"
                           Grid.Row="2"
                           Text="0"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"
                           Margin="0,0,10,0"/>
            </Grid>

            <Grid x:Name="resultGrid"
                  Grid.ColumnSpan="3"
                  Background="#AA65001D"
                  Visibility="Collapsed">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="resultTextBlock"
                           Grid.Row="0"
                           Text="You lost!!!"
                           FontSize="44"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="endButton"
                            Grid.Column="0"
                            Content="End"
                            Width="120"
                            Padding="10,5"
                            Background="#FF8A0000"
                            BorderBrush="#FFB90000"
                            BorderThickness="2"
                            Click="SelectedEndButton"/>

                    <Button x:Name="nextButton"
                            Grid.Column="2"
                            Content="Next"
                            Width="120"
                            Padding="10,5"
                            Background="#FF008A00"
                            BorderBrush="#FF00B900"
                            BorderThickness="2"
                            Click="SelectedNextButton"/>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</Window>
