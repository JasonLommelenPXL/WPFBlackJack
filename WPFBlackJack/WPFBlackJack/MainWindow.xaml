<Window x:Class="WPFBlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBlackJack"
        mc:Ignorable="d"
        Title="♥ ♦ ♠ ♣ Blackjack ♥ ♦ ♠ ♣" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\jason\downloads\blackjack-background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <DockPanel>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Header="Game" Foreground="White">
                <StackPanel Margin="10">
                    <Button Content="New Game"
                        Margin="10,20,10,10"
                        Background="#FF008A00"
                        Foreground="White"
                        BorderThickness="2"
                        BorderBrush="#FF00B900"
                        Click="StartNewGame"/>

                    <Separator Margin="10,0,10,10" Background="#FFD8D8D8"/>

                    <TextBlock Text="Credits" FontSize="10" Margin="10,0,10,5" Foreground="White"/>

                    <TextBlock x:Name="creditsTextBlock"
                           Text="500"
                           Margin="10,0,10,0"
                           TextAlignment="Right"
                           Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="0" Grid.Column="1" Margin="15,0,0,0" Header="Bank" Foreground="White">
                <StackPanel Orientation="Horizontal" x:Name="bankStack" Margin="5,0,5,0" Height="68"/>
            </GroupBox>

            <TextBlock Grid.Row="1" Grid.Column="1" Text="Place your bet:" Margin="78,65,447,104" Foreground="White"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="78,103,447,67"/>

            
            <Button Grid.Row="1" Grid.Column="1" Margin="78,148,447,10" Content="Play"
                Background="#FF008A00" Foreground="White"
                BorderThickness="2" BorderBrush="#FF00B900"
                Click="StartNewGame"/>

            <Button Grid.Row="1" Grid.Column="1" Margin="243,148,280,10" Content="Card"
                Background="#FF008A00" Foreground="White"
                BorderThickness="2" BorderBrush="#FF00B900"
                Click="SelectedCardButton"
                Visibility="Collapsed"/>
            
            <Button Grid.Row="1" Grid.Column="1" Margin="354,148,167,10" Content="Stop"
                Background="#FF8A0000" Foreground="White"
                BorderThickness="2" BorderBrush="#FFB90000"
                Click="SelectedStopButton"
                Visibility="Collapsed"/>

            <TextBlock Grid.Row="1" Grid.Column="1" Text="0" Margin="597,14,0,152" Foreground="White" RenderTransformOrigin="4.576,-1.006" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Width="17">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.169"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="0" Margin="599,172,0,103" Foreground="White" RenderTransformOrigin="4.576,-1.006" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Grid.RowSpan="2" Width="15"/>
            
            <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="197" Margin="15,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="599" Grid.RowSpan="2" Fill="#7F65001D" Visibility="Visible"/>

            <Button Grid.Row="1" Grid.Column="1" Margin="35,148,486,10" Content="End"
                Background="#FF8A0000" Foreground="White"
                BorderThickness="2" BorderBrush="#FFB90000"
                Click="SelectedEndButton"
                Visibility="Visible"/>


            <Button Grid.Row="1" Grid.Column="1" Margin="483,148,37,10" Content="Next"
                Background="#FF008A00" Foreground="White"
                BorderThickness="2" BorderBrush="#FF00B900"
                Click="SelectedNextButton"
                Visibility="Visible"/>
            
            <Image Grid.Row="1" Grid.Column="1" Source="/images/cards/back.png" Margin="270, 25, 200, 75"/>
            <GroupBox Grid.Row="2" Grid.Column="1" Margin="15,0,0,0" Header="Player" Foreground="White">
                <StackPanel Orientation="Horizontal" x:Name="playerStack" Margin="5,0,5,0" Height="74"/>
            </GroupBox>
            <TextBlock Grid.Row="1" Grid.Column="1" Margin="343,61,0,97" Foreground="White" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.857,0.544" Text="0" HorizontalAlignment="Left"></TextBlock>
        </Grid>
    </DockPanel>
</Window>
